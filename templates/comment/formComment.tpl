<div class="card">
    <div class="card-header text-center">
        <h4>
            Commenta esta actividad
        </h4>
    </div>

    <div class="card-body">
            <form id="form-new-comment">
                <div class="form-group">
                <textarea name="comment" id="comment" class="form-control" placeholder="Ingrese su comentario"  rows="3"></textarea>                </div>
                <div class="form-group selectpicker">
                    <select name="stars" id="stars" class="form-control">
                        <option value="">Elije una valoracion</option>
                        <option value="1">1 estrella</option>
                        <option value="2">2 estrella</option>
                        <option value="3">3 estrella</option>
                        <option value="4">4 estrella</option>
                        <option value="5">5 estrella</option>
                    </select>
                </div>
                <div class="form-group">
                    <button id="btn-create-comment" class="btn btn-success btn-block">
                        Comentar
                    </button>
                </div>
            </form>
    </div>
</div>
