<section id="section-filter" class="d-none">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
              <div class="card-header text-center">
                <h4>
                    Filtros
                </h4>
              </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <input type="text" name="filter" class="form-control" id="text-filter" placeholder="Titulo de la actividad">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="min" id="min-filter" placeholder="Precio máximo">
                        </div>
                
                        <div class="form-group">
                            <input type="number" class="form-control" name="max" id="max-filter" placeholder="Precio mínimo">
                        </div>
                        <button class="btn btn-danger btn-block font-weight-bold" id="go-filter">BUSCAR</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>